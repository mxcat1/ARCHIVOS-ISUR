@model IEnumerable<Chefsito2._0.Models.Receta>
@{
    ViewData["Title"] = "Mis Recetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Recetas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Recetas">Agregar Nueva Receta</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
                    @foreach (var item in Model)
                    {
                        <div class="card m-3" style="width: 18rem;">
                            <img class="card-img-top" src="~/imagenes/@item.ImagenReceta" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">@item.NombreReceta</h5>
                                <p class="card-text">@item.DescripcionReceta</p>
                            </div>
                        </div>
                    }
        }
        else
        {
            <p>No exiten registros</p>
        }
    </div>
</div>