@inject SignInManager<IdentityUser> SignInManager
@model IEnumerable<Chefsito2._0.Models.Receta>
@{
    ViewData["Title"] = "RecetasBlog";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{int i = 1;}
        @foreach (var item in Model)
        {
            if (i <= 1)
            {
                <div class="carousel-item active">
                    <img src="~/imagenes/@item.ImagenReceta" class="d-block w-100" height="700px" alt="...">
                    <div class="carousel-caption d-none d-md-block" style="background: rgb(44 ,44 ,44 ,0.70);">
                        <h5>@item.NombreReceta</h5>
                        <p>@item.DescripcionReceta</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="~/imagenes/@item.ImagenReceta" class="d-block w-100" height="700px" alt="...">
                    <div class="carousel-caption d-none d-md-block" style="background: rgb(44 ,44 ,44 ,0.70);">
                        <h5>@item.NombreReceta</h5>
                        <p>@item.DescripcionReceta</p>
                    </div>
                </div>
            }
            i++;
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="container">
    <p class="display-3 text-center">Recetas</p>
    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card">
                    <img src="~/imagenes/@item.ImagenReceta" class="card-img-top" alt="imagen receta" height="270px">
                    <div class="card-body">
                        <h3 class="h3">@item.NombreReceta</h3>
                        <p class="card-text">@item.DescripcionReceta</p>
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <a asp-controller="Recetas" asp-action="RecetasBlogShow" asp-route-id="@item.Id" class="btn btn-info">Ver Más</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

