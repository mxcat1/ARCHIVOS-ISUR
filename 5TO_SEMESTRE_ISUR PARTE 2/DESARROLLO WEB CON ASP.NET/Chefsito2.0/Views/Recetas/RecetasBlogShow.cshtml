@model Chefsito2._0.Models.Receta
@{
    ViewData["Title"] = "Detalle de " + Model.NombreReceta;
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<div class="container">
    <p class="display-3 text-center">@Model.NombreReceta</p>
    <div class="row">
        <div class="col-sm-6">
            <img class="img-fluid" src="~/imagenes/@Model.ImagenReceta" alt="@Model.NombreReceta" />
        </div>
        <div class="col-sm-6 py-5">
            <div>
                <h4>Descripcion</h4>
                <p>@Model.DescripcionReceta</p>
            </div>
            <div>
                <h4>Categoria</h4>
                <p>@ViewBag.Categoria.NombreCategoria</p>
            </div>
            <div>
                <h4>Ingredientes</h4>
                <p>@Model.IngredientesReceta</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 py-3">
            <p class="display-4 text-center">Preparacion</p>
            <p>@Model.DetalleReceta</p>
        </div>
    </div>
    <div class="row">

    </div>
</div>
