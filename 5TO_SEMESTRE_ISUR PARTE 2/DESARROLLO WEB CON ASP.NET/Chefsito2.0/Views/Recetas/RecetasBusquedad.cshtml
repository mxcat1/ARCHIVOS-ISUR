
@{
    ViewData["Title"] = "RecetasBusquedad";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<div class="container">

    <p class="display-3 text-center">Recetas</p>
    <form asp-controller="Recetas" asp-action="RecetasBusquedad" method="post">
        <div class="form-row">
            <div class="form-group col">
                <label for="buscarReceta">Buscar Receta</label>
                <input type="text" class="form-control" name="buscarReceta" id="buscarReceta">
            </div>
            <div class="form-group col">
                <label for="categoriaBusquedad" class="control-label">Seleccione una Categoria</label>
                <select name="categoriaBusquedad" class="form-control" asp-items="ViewBag.Categoria"></select>
            </div>
            <div class="form-group col-md-2 d-flex justify-content-start">
                <div class="btn-group-lg d-flex flex-column justify-content-center">
                    <input class="btn btn-primary btn-lg" type="submit" value="Buscar" />
                </div>
            </div>
            
        </div>
    </form>
    <div class="row row-cols-1 row-cols-md-3">
        @foreach (var item in Model)
        {
            <div class="col mb-4">
                <div class="card">
                    <img src="~/imagenes/@item.ImagenReceta" class="card-img-top" alt="imagen receta" height="270px">
                    <div class="card-body">
                        <h3 class="h3">@item.NombreReceta</h3>
                        <p class="card-text">@item.DescripcionReceta</p>
                    </div>
                    <div class="card-footer d-flex justify-content-center">
                        <a asp-controller="Recetas" asp-action="RecetasBlogShow" asp-route-id="@item.Id" class="btn btn-info">Ver Más</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
