@model IEnumerable<Chefsito2._0.Models.Categoria>
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categorias</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Recetas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Categorias">Agregar Nueva Categoria</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.NombreCategoria)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.NombreCategoria</td>
                            <td class="d-flex justify-content-around">
                                <a asp-controller="Categorias" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <form asp-controller="Categorias" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No exiten registros</p>
        }
    </div>
</div>
@section Scripts{

    <script>
        document.onsubmit = function () {
            return confirm('¿Esta Usted Seguro de Eliminar esta Receta?');
        }
    </script>
}
